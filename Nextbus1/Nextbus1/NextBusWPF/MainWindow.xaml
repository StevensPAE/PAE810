<Window x:Class="NextBusWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Nextbus Tester" Height="350" Width="525">
    <Grid>
        <Grid  HorizontalAlignment="Left" Margin="0,0,0,0" Name="grid1" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <ComboBox Height="26" Margin="8,8,8,0" Name="Dropdown_Agencies" VerticalAlignment="Top" HorizontalAlignment="Stretch" SelectionChanged="Dropdown_Agencies_SelectionChanged" />
            <ListBox  Margin="8,40,8,0" Name="List_Routes" Height="265" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />
        </Grid>
    </Grid>
</Window>
